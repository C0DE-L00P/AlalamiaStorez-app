<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="-40dp"
        app:cardBackgroundColor="@color/Gray"
        app:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/realme2"
            android:paddingTop="40dp"
            android:paddingStart="40dp">

            <com.secondary.alalamiastorez.WrapContentHeightViewPager
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:id="@+id/product_vp"/>

            <ImageButton
                android:id="@+id/product_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:background="@drawable/btn_trans_bg"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"/>
            <ImageButton
                android:id="@+id/product_buy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_buy_e1"
                android:scaleType="centerInside"
                android:layout_alignParentEnd="true"
                android:padding="3dp"
                android:background="@drawable/btn_trans_bg"/>
            <ImageButton
                android:id="@+id/product_compare"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@id/product_buy"
                android:src="@drawable/ic_flip_white_40dp"
                android:padding="8dp"
                android:background="@drawable/btn_trans_bg"/>
            <ImageButton
                android:id="@+id/product_fav"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:layout_toStartOf="@id/product_compare"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:padding="8dp"
                android:background="@drawable/btn_trans_bg"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36dp"
        android:paddingStart="36dp"
        android:paddingEnd="36dp">
        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realme 6 pro"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/product_oldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/product_price"
            android:text="5600"
            android:textColor="@color/colorPrimary"
            android:layout_alignBaseline="@id/product_price"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/product_title"
            android:text="5400 EGP"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/specs_bg"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/cpu_ll"
                android:padding="20dp"
                android:layout_marginEnd="18dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_cpu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/cpu_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/specs_bg"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/ram_ll"
                android:layout_marginEnd="18dp"
                android:padding="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_ram"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RAM"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/ram_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/specs_bg"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/storage_ll"
                android:layout_marginEnd="18dp"
                android:padding="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_storage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Storage"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/storage_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/specs_bg"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/camera_ll"
                android:layout_marginEnd="18dp"
                android:padding="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_lens"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/camera_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/specs_bg"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/screen_ll"
                android:layout_marginEnd="18dp"
                android:padding="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_screen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screen"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/screen_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/specs_bg"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/battery_ll"
                android:layout_marginEnd="18dp"
                android:padding="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_battery"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/battery_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/specs_bg"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:id="@+id/sim_ll"
                android:padding="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_sim"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIM"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/sim_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>
    
    <TextView
        android:id="@+id/product_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Real\n Power\n of New snapdragon\n 5G CPU\n with fastest\n performance in Games\n like Fortnite and\n PUBG Mobile"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:lineSpacingExtra="7dp"/>

</LinearLayout>

        <LinearLayout
            android:id="@+id/bottomSheetLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#000"
            android:padding="20dp"
            app:behavior_hideable="true"
            app:behavior_skipCollapsed="true"
            app:layout_behavior="@string/bottom_sheet_behavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>